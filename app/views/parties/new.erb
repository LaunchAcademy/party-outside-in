<h1>Add a new party</h1>

<% if @party.errors.size > 0 %>
  <ul class="errors">
    <% @party.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<form action="/parties" method="POST">
  <p>
    <label for="name">Name</label>
    <input type="text" name="party[name]" id="name" />
  </p>

  <p>
    <label for="location">Location</label>
    <input type="text" name="party[location]" id="location" />
  </p>


  <p>
    <label for="description">Description</label>
    <textarea name="party[description]" id="description"></textarea>
  </p>

  <p>
    <input type="submit" value="Add" />
  </p>
</form>